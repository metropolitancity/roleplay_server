{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compiler",
      "type": "shell",
      "windows":{
        "command": "${workspaceRoot}\\qawno\\pawncc.exe",
        "args": [
          "metropolitan/main.pwn",
          "--%",
          "-Dgamemodes",
          "-i./../qawno/include",
          "-imetropolitan",
          "-imetropolitan\\systems",
          "-;+",
          "-(+",
          "-d3",
          "-Z"
        ]
      },
      "linux":{
        "command": "qawno/pawncc",
        "args": [
          "metropolitan/main.pwn",
          "-i./../qawno/include",
          "-imetropolitan",
          "-imetropolitan/systems",
          "-Dgamemodes",
          "\"-;+\"",
          "\"-(+\"",
          "\"-d3\"",
          "\"-Z\""
        ],
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": false,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
      "problemMatcher": "$pawncc"
    },
    {
      "label": "compiler-filterscript",
      "type": "shell",
      "windows":{
        "command": "${workspaceRoot}\\qawno\\pawncc.exe",
        "args": [
          "${file}",
          "--%",
          "-Dfilterscripts",
          "-;+",
          "-(+",
          "-d3",
          "-Z"
        ]
      },
      "linux":{
        "command": "qawno/pawncc",
        "args": [
          "${file}",
          "-Dfilterscripts",
          "-i./../qawno/include",
          "\"-;+\"",
          "\"-(+\"",
          "\"-d3\"",
          "\"-Z\""
        ]
      },
      
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": false,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
      "problemMatcher": "$pawncc"
    }
  ]
}